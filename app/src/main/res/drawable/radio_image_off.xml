<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="@dimen/radio_image_radio_icon_size_shape"
                android:height="@dimen/radio_image_radio_icon_size_shape" />
            <solid android:color="@color/image_off" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/radio_image_radio_circle_bottom_right"
        android:gravity="center"
        android:left="@dimen/radio_image_radio_circle_top_left"
        android:right="@dimen/radio_image_radio_circle_bottom_right"
        android:top="@dimen/radio_image_radio_circle_top_left">
        <shape android:shape="oval">
            <size
                android:width="@dimen/radio_image_radio_circle_size"
                android:height="@dimen/radio_image_radio_circle_size" />
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>