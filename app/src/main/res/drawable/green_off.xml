<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners
                android:bottomLeftRadius="@dimen/shape_radius"
                android:bottomRightRadius="@dimen/shape_radius"
                android:topLeftRadius="@dimen/shape_radius"
                android:topRightRadius="@dimen/shape_radius" />
            <size
                android:width="@dimen/check_radio_backgroud_square"
                android:height="@dimen/check_radio_backgroud_square" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/check_radio_vertical_off"
        android:left="@dimen/check_radio_side_off"
        android:right="@dimen/check_radio_side_off"
        android:top="@dimen/check_radio_vertical_off">
        <shape android:shape="rectangle">
            <size
                android:width="@dimen/check_radio_size_off"
                android:height="@dimen/check_radio_side_off" />
            <solid android:color="@color/light_green" />
        </shape>
    </item>
</layer-list>

