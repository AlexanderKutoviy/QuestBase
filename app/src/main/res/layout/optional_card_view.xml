<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/form_result_card_content_margin"
    android:orientation="vertical"
    android:id="@+id/optional_layout">
    <!--secondary result label-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/all_results"
        android:textColor="@color/black"
        android:textSize="@dimen/feed_result_title_text_size"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/all_results_sub_title"
        android:textColor="@color/black"
        android:textSize="@dimen/form_secondary_result_title_text_size"/>
</LinearLayout>