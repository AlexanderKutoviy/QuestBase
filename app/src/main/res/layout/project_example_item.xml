<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/project_example_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/profile_forms_layout_inner_margin">

    <ImageView
        android:id="@+id/project_avatar"
        android:layout_width="@dimen/user_form_item_width"
        android:layout_height="@dimen/user_form_item_width" />

    <com.febaisi.CustomTextView
        android:id="@+id/project_description"
        android:layout_width="@dimen/user_form_item_width"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/project_avatar"
        android:layout_marginTop="@dimen/transactions_block_side_margins"
        android:background="@color/white"
        android:textSize="@dimen/user_form_description_text_size"
        app:typeface="Myriad Pro Light.ttf" />

</RelativeLayout>