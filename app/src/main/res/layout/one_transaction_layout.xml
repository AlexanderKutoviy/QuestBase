<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/current_transaction_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/form_result_card_content_margin"
    android:background="@color/translucent_grey"
    android:orientation="vertical">

    <TextView

        android:id="@+id/formNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="@dimen/profile_one_transactions_date_bottom_margin"
        android:layout_marginLeft="@dimen/profile_transactions_margin"
        android:layout_marginTop="@dimen/profile_transactions_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/profile_one_transactions_text_size" />

    <LinearLayout
        android:id="@+id/one_transaction_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/profile_transactions_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ammount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/profile_transactions_amount_margin"
            android:textColor="@color/black"
            android:textSize="@dimen/profile_one_transactions_text_size" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/profile_transactions_amount_margin"
            android:textColor="@color/black"
            android:textSize="@dimen/profile_one_transactions_text_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/profile_transactions_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/profile_one_transactions_text_size" />
</LinearLayout>