<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/payout_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/one_transaction_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="left"
            android:text="Оберіть, куди вивести баланс: "
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200 грн"
            android:textColor="@color/grey_dark"
            android:textIsSelectable="false"
            android:textSize="20dp" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/form_result_card_margin"
        card_view:cardCornerRadius="@dimen/form_result_corner_radius"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:id="@+id/optional_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/army_payout_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Народний Тил – волонтерська команда, ціль
                              якої забезпечення виключно
                              передової фронту."
                android:layout_gravity="left" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/form_result_card_margin"
        card_view:cardCornerRadius="@dimen/form_result_corner_radius"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Happy Paw - фонд допомоги тварин,
                        характериний іноваційними рішеннями
                        та підходами вирішень проблем."
                android:layout_gravity="left" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/form_result_card_margin"
        card_view:cardCornerRadius="@dimen/form_result_corner_radius"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Поповнення власного мобільного рахунку"
                android:layout_gravity="left" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>