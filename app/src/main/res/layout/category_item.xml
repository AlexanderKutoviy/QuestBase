<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/category_item"
    android:layout_width="@dimen/feed_catgory_item_width"
    android:layout_height="@dimen/feed_catgory_item_height"
    android:layout_marginLeft="@dimen/feed_catgory_item_side"
    android:layout_marginRight="@dimen/feed_catgory_item_side"
    android:clickable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/category_icon"
        android:layout_width="@dimen/feed_catgory_item_icon_size"
        android:layout_height="@dimen/feed_catgory_item_icon_size"
        android:clickable="true"
        android:gravity="center" />

    <com.febaisi.CustomTextView
        android:id="@+id/category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/tab_select"
        android:textSize="@dimen/feed_catgory_item_text_size"
        app:typeface="MyriadPro-Light semiextended.ttf" />
</LinearLayout>